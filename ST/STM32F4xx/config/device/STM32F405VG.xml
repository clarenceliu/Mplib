<Device>
    <Name>STM32F405VG</Name>
    <Vendor>STMicroeletronics</Vendor>
    <Family>STM32F405</Family>
    <Arch>Cortex-M4</Arch>
    <Description>
        STMicroeletronics's STM32F405VG operates at a maximum speed of 168MHz and features 1024 Kbytes of Flash and 192 Kbytes of RAM.
    </Description>
    <Parameters>
        <Parameter>16-bit timers (IC/OC/PWM) : 12x16-bit                                             </Parameter>
        <Parameter>32-bit timers (IC/OC/PWM) : 2x32-bit                                              </Parameter>
        <Parameter>24-bit downcounter        : 1                                                     </Parameter>
        <Parameter>WDG                       : Independent watchdog (IWDG) and Window watchdog (WWDG)</Parameter>
        <Parameter>RTC                       : 1                                                     </Parameter>
        <Parameter>ADC                       : 16x12-bit                                             </Parameter>
        <Parameter>High Current gpio         : 82                                                    </Parameter>
        <Parameter>SPI                       : 3                                                     </Parameter>
        <Parameter>I2S                       : 2                                                     </Parameter>
        <Parameter>I2C                       : 3                                                     </Parameter>
        <Parameter>USART(IrDA, ISO 7816)     : 3                                                     </Parameter>
        <Parameter>USB OTG (FS+FS/HS)        : 2                                                     </Parameter>
        <Parameter>CAN                       : 2                                                     </Parameter>
        <Parameter>SDIO                      : 1                                                     </Parameter>
    </Parameters>
    <ReferenceLinks>
        <Link name="Chips Page">http://www.st.com/web/catalog/mmc/FM141/SC1169/SS1577/LN1035/PF252142</Link>
        <Link name="Chips Datasheet">http://www.st.com/st-web-ui/static/active/en/resource/technical/document/datasheet/DM00037051.pdf</Link>
    </ReferenceLinks>
    
    <DebugSetting>$TOOLKIT_CONFIG_DIR$\debugger\STM32F4x.xml</DebugSetting>
    
    <Flash>
        <Block addr="0x00000000" size="0x00100000" read="true" write="false" execute="true" name="Embedded Flash" />    <!-- 1024K -->
    </Flash>
    
    <Ram>
        <Block addr="0x20000000" size="0x00030000" read="true" write="true"  execute="true" name="Embedded RAM" />      <!-- 192K -->
    </Ram>
    
    <FlashLoader>
        <loader>$TOOLKIT_FLASH_DIR$\STM32F4xx_1024.elf</loader>
    </FlashLoader>
</Device>
